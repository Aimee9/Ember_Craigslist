{{#if updateListingForm}}
  <h4>Update Listing</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="name">User Name</label>
          {{input value=name id="name" placeholder=listing.name}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=listing.title}}
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          {{input value=price id="price" placeholder=listing.price}}
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          {{input value=location id="location" placeholder=listing.location}}
        </div>

        <div class="form-group">
          <label for="body">Body</label>
          {{input value=body id="body" placeholder=listing.body}}
        </div>

        <div class="form-group">
          <label for="phone">Phone</label>
          {{input value=phone id="phone" placeholder=listing.phone}}
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          {{input value=email id="email" placeholder=listing.email}}
        </div>

        <button {{action 'update' listing}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateListingForm'}}>Update</button>
{{/if}}
