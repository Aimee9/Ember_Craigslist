{{#if addNewListing}}
  <h1>New Listing</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">User Name</label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          {{input value=email id="email"}}
        </div>

        <div class="form-group">
          <label for="phone">Phone Number</label>
          {{input value=phone id="phone"}}
        </div>

        <div class="form-group">
          <label for="title">Listing Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="body">Listing Message</label>
          {{input value=body id="body"}}
        </div>

        <div class="form-group">
          <label for="location">Listing Location</label>
          {{input value=location id="location"}}
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          {{input value=price id="price"}}
        </div>

        <button {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'newListingShow'}}>New Listing</button>
{{/if}}
